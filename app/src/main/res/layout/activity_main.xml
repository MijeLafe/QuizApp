                    android:paddingLeft="16dp"
                    android:text="@string/option_eight_a" />

                <CheckBox
                    android:id="@+id/option_eight_b"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="16dp"
                    android:text="@string/option_eight_b" />

                <CheckBox
                    android:id="@+id/option_eight_c"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="16dp"
                    android:text="@string/option_eight_c" />

                <CheckBox
                    android:id="@+id/option_eight_d"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="16dp"
                    android:text="@string/option_eight_d" />

                <CheckBox
                    android:id="@+id/option_eight_e"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:paddingLeft="16dp"
                    android:text="@string/option_eight_e" />

                <TextView
                    android:id="@+id/question_nine"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:text="@string/question_nine"
                    android:textAppearance="?android:textAppearanceLarge" />

                <CheckBox
                    android:id="@+id/option_nine_a"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
