                    android:paddingLeft="16dp"
                    android:text="@string/option_nine_c" />

                <CheckBox
                    android:id="@+id/option_nine_d"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="16dp"
