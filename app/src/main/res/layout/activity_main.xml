                <CheckBox
                    android:id="@+id/option_ten_c"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="16dp"
                    android:text="@string/option_ten_c" />

                <CheckBox
                    android:id="@+id/option_ten_d"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
